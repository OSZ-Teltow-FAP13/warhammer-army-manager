<UserControl x:Class="Warhammer_Army_Manager.Views.KeywordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Warhammer_Army_Manager.Views"
             xmlns:viewModel="clr-namespace:Warhammer_Army_Manager.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>

        <TextBlock Text="Schlüsselwörter"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,20">
            <Button Content="Hinzufügen"
                    ToolTip="add"
                    Margin="0,0,20,0"
                    Padding="20 7"
                    Command="{Binding ShowWindowCommand}"/>
            <Button Content="Alle Löschen"
                    ToolTip="delete all"
                    Margin="0,0,20,0"
                    Padding="20 7"
                    Click="DeleteAll"/>
        </StackPanel>

        <DataGrid Grid.Row="2"
                  Name="DataGridKeywords"
                  ItemsSource="{Binding Keywords}"
                  AutoGenerateColumns="False"
                  HorizontalAlignment="Left"
                  MaxHeight="400">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" 
                                        Binding="{Binding Id}"
                                        IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" 
                                        Binding="{Binding Name}"
                                        MinWidth="400"/>

                <DataGridTemplateColumn Header="Aktionen" IsReadOnly="True" Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Command="{Binding DeleteCommand}">
                                    löschen
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

    </StackPanel>
</UserControl>
